<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/item_garbager_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#44000000"
        android:gravity="center"
        android:padding="10dp"
        android:text="我是李某"
        android:textSize="15sp"></TextView>

    <TextView
        android:id="@+id/item_garbager_user_phone_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="聯係方式："
        />

    <TextView
        android:id="@+id/item_garbager_user_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="位置"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人简介:"
        android:padding="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:lines="4"
        android:paddingRight="5dp"
        android:text="這裏可以添加個人簡介嘛"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:padding="2dp"
        android:layout_height="wrap_content"
        android:text="距离你  100m"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="已認證"
        android:textColor="#f0ec0101"/>

</LinearLayout>
