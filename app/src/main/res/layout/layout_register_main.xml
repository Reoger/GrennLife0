<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <EditText
        android:layout_width="245dp"
        android:layout_height="45dp"
        android:layout_marginTop="185dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_text"
        android:inputType="text"
        android:hint="username"
        android:drawableRight="@mipmap/user3"
        android:paddingRight="15dp"
        android:paddingLeft="12dp"
        android:id="@+id/register_username"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="365dp"
        android:layout_alignLeft="@+id/register_num"
        android:orientation="horizontal">
        <EditText
            android:layout_width="190dp"
            android:layout_height="45dp"
            android:background="@drawable/shape_text"
            android:inputType="text"
            android:hint="输入验证码"
            android:drawableRight="@mipmap/right1"
            android:paddingRight="10dp"
            android:paddingLeft="12dp"
            android:id="@+id/register_check_code"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:background="@drawable/get_msg_code"
                android:id="@+id/register_getMSMCheckCode"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/LightCyan1"
                android:id="@+id/register_time"
                android:text="获取"/>
        </FrameLayout>
    </LinearLayout>
    <EditText
        android:layout_width="245dp"
        android:layout_height="45dp"
        android:layout_marginTop="245dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_text"
        android:inputType="textPassword"
        android:hint="password"
        android:drawableRight="@mipmap/password1"
        android:paddingRight="15dp"
        android:paddingLeft="12dp"
        android:id="@+id/register_password"/>
    <EditText
        android:layout_width="245dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_text"
        android:layout_marginTop="305dp"
        android:hint="phone number"
        android:drawableRight="@mipmap/tel5"
        android:paddingRight="15dp"
        android:paddingLeft="12dp"
        android:inputType="number"
        android:id="@+id/register_num"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="445dp">
    <Button
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:background="@drawable/shape"
        android:text="注  册"
        android:textColor="#ffffff"
        android:textSize="21dp"
        android:id="@+id/register_load"/>
    </LinearLayout>
</RelativeLayout>
