<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reoger.grennlife">


    <!--允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--允许读取手机当前位置 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 请求摄像头的权限-->
    <uses-permission android:name="android.permission.CAMERA" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".utils.CustomApplication"
        android:theme="@style/AppTheme">
        <activity android:name=".loginMVP.view.LoginView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".register.view.RegisterView" />
        <activity android:name=".MainProject.view.MainActivity" />
        <activity android:name=".monitoring.view.EnvironmentalMonitoring" />
        <activity android:name=".Recycle.view.RecycleView"/>
        <activity android:name=".Recycle.view.PublishingResourcesView"/>
        <activity android:name=".Recycle.view.GarbagerListView"/>
        <activity android:name=".ResetPassword.view.ResetPasswordView" />
        <activity android:name=".MainProject.view.CommentActivity"/>
        <activity android:name=".MainProject.view.DynamicActivity" />
        <activity android:name=".encyclopaedia.view.EncyclopaediaView"
            android:label="环保百科"/>
        <activity android:name=".news.view.NewsView"
            android:label="环保新闻" />
        <activity android:name=".law.view.LawView"
            android:label="法律法规" />
        <activity android:name=".technology.view.TechnologyView"
            android:label="环保新闻" />


    </application>

</manifest>